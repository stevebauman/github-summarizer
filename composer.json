{
    "name": "stevebauman/github-summarizer",
    "description": "Summarize GitHub content using PHP.",
    "keywords": ["gpt", "chat", "summarizer", "github"],
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/stevebauman/github-summarizer/issues",
        "source": "https://github.com/stevebauman/github-summarizer"
    },
    "authors": [
        {
            "name": "Steve Bauman",
            "email": "steven_bauman@outlook.com"
        }
    ],
    "require-dev": {
        "php": "^8.1",
        "dnoegel/php-xdg-base-dir": "^0.1.1",
        "gioni06/gpt3-tokenizer": "^1.1",
        "guzzlehttp/guzzle": "^7.5",
        "illuminate/http": "^10.0",
        "knplabs/github-api": "^3.9",
        "laravel-zero/framework": "^10.0",
        "nunomaduro/termwind": "^1.15",
        "ptlis/diff-parser": "^1.1",
        "titasgailius/terminal": "^1.2",
        "laravel/pint": "^1.5",
        "mockery/mockery": "^1.5.1",
        "pestphp/pest": "^1.22.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["builds/summarize"],
    "scripts": {
        "build" : "php summarize app:build"
    }
}
